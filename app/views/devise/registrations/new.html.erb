<section class="vilain form-horizontal"> 
  <h1 class="text-center">Sign UP</h1> 
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <form class="form-horizontal container">
  <p style="color: white;"><%= devise_error_messages! %></p>
    <div class="form-group">
      <label for="" class="lady control-label">Name</label>
      <div>
        <%= f.text_field :user_name, autofocus: true, :class=>"form-control", :placeholder=>"What ur mum calls you" %>
      </div>
    </div>
    <div class="form-group">
      <label for="integer" class="lady control-label">Number</label>
      <div>
        <%= f.number_field :whatsapp, :class=>"form-control", :placeholder=>"WhatsApp Number" %>
      </div>
    </div>
    <div class="form-group">
      <label for="email" class="lady control-label" >Email</label>
      <div>
        <%= f.email_field :email, :class=>"form-control", :placeholder=>"Herh!! are you still using YAHOO?" %>
      </div>
    </div>
    <div class="form-group">
      <label for="sel1" class="lady control-label">Major</label>
        <div>
          <%= f.select(:major, ['NONE','ECONOMICS','GEOGRAPHY','FRENCH'], {}, { :class => 'form-control' }) %>
        </div>
    </div>
    <div class="form-group">
      <label for="sel1" class="lady control-label">Minor</label>
        <div>
          <%= f.select(:minor, ['NONE','ECONOMICS','GEOGRAPHY','FRENCH'], {}, { :class => 'form-control' }) %>
        </div>
    </div>
    <div class="form-group">
      <label for="sel1" class="lady control-label">level</label>
        <div>
          <%= f.select(:level, ['NONE','100','200','300','400'], {}, { :class => 'form-control' }) %>
        </div>
    </div>
    <div class="form-group">
      <label for="inputPassword3" class="lady control-label">Password</label>
      <div>
        <%= f.password_field :password, autocomplete: "off", :class=>"form-control" %>
        <% if @minimum_password_length %>
          <p style="color: white;">(<%= @minimum_password_length %> characters minimum)</p>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label for="inputPassword3" class="lady control-label">Retype Password</label>
      <div>
      <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"form-control", :placeholder=>"Type your password again quickly they are watching" %>
      </div>
    </div>
    <div class="form-group col-md-6">
      <div class="actions" style="color: black;"><%= f.submit "Sign up", :class => "btn btn-success btn-lg" %>
      </div>
    </div>
  </form>
  <% end %>
</section>